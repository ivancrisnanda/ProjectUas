<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.IndoFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="719dp"
        android:layout_height="345dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewindo4"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/bali" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="40dp"
                        android:text="        BALI"
                        android:textAlignment="center"
                        android:textSize="30dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewindo3"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/kalimantan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="40dp"
                        android:text="    SULAWESI"
                        android:textAlignment="center"
                        android:textSize="30dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewindo2"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/kalimantan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="40dp"
                        android:text="  KALIMANTAN"
                        android:textAlignment="center"
                        android:textSize="30dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewindo1"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/jawa" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="40dp"
                        android:text="      JAWA"
                        android:textAlignment="center"
                        android:textSize="35dp" />


                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>