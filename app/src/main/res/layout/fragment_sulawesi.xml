<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SulawesiFragment">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="719dp"
        android:layout_height="345dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewcoto"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/coto" />

                    <TextView
                        android:layout_width="239dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="40dp"
                        android:text="COTO MAKASAR"
                        android:textAlignment="center"
                        android:textSize="25sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewkonro"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/sopkon" />

                    <TextView
                        android:layout_width="225dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="40dp"
                        android:text="SOP KONRO"
                        android:textAlignment="center"
                        android:textSize="25sp" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewpanada"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/panada" />

                    <TextView
                        android:layout_width="225dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="40dp"
                        android:text="PANADA"
                        android:textAlignment="center"
                        android:textSize="25sp" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewbubur"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/buburma" />

                    <TextView
                        android:layout_width="225dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="40dp"
                        android:text="BUBUR MANADO"
                        android:textAlignment="center"
                        android:textSize="25sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>